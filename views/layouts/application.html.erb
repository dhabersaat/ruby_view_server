  <%
    def link_to(name, url)
        return "<a href='#{url}'>#{name}</a> | "
     end
    %>


<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <%= link_to('Google', 'http://google.com') %>
      <%= link_to('Facebook', 'http://facebook.com') %>
      <%= link_to('Twitter', 'https://twitter.com/#!/donnahabersaat') %>
	
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>